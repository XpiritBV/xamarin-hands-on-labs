<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Visual="Material" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Quotes.EditQuotePage">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="10">
            <Label Text="Author name" FontSize="Small"/>
            <Entry Text="{Binding Author}" Placeholder="Author name goes here"/>
            <Label Text="Quote text" FontSize="Small" />
            <Editor Text="{Binding QuoteText}" VerticalOptions="FillAndExpand" />
            <Button Text="Save" Clicked="SaveQuote"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
